@typeparam TValue

@if (Label != null)
{
    <div class="form-group row">
        <label for="@_id" class="col-sm-2 col-form-label">@Label</label>
        <div class="col-sm-10">
            <input type="text" readonly="@(!Edit)" class="form-control" id="@_id" value="@Value">
        </div>
    </div>
}

@code
{
    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public bool Edit { get; set; } = false;

    [Parameter]
    public TValue Value { get; set; } = default;

    private string _id = $"input_{Guid.NewGuid().ToString()}";
}